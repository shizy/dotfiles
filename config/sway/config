### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term termite

### Exec
exec xset r rate 150 50 &
exec synergy-core --server
exec $term --title=vim -e "/usr/bin/nvim -S $XDG_CACHE_HOME/nvim/session.vim"; mode "default"

### Settings
floating_modifier $mod
default_orientation auto
workspace_auto_back_and_forth yes
workspace_layout default
new_window pixel 1
new_float pixel 1
hide_edge_borders smart
font pango:M+ 1m, Icons 11
font pango:$font_mono, Icons 11

### Window handling
for_window [class="xfreerdp"] move container to workspace 1
for_window [class="qutebrowser"] move container to workspace 2
for_window [title="vim"] move container to workspace 3
for_window [title="irc"] move container to workspace 4

for_window [class="Termite" title="^scratchtop$"] floating enable
for_window [class="Termite" title="^scratchbottom$"] floating enable
for_window [class="Termite" title="^scratchsearch$"] floating enable

### Modes
set $mode_launch [:]dmenu, [b]rowser, [i]rc, [t]erm, [v]im
mode "$mode_launch" {
    bindsym semicolon exec dmenu_run -nb "#000000" -nf "#383838" -sf "$COLOR_URGENT" -sb "#000000" -b -fn "$FONT_MONO-$FONT_SIZE"; mode "default"
    bindsym b exec "$BROWSER"; mode "default"
    bindsym i exec $term --title=irc -e "weechat-curses"; mode "default"
    bindsym t exec $term --title=term; mode "default"
    bindsym v exec $term --title=vim -e "/usr/bin/nvim -S $XDG_CACHE_HOME/nvim/session.vim"; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

set $mode_layout [s]tacking, [t]abbed, s[p]lit (toggle)
mode "$mode_layout" {
    bindsym s layout stacking; mode "default"
    bindsym t layout tabbed; mode "default"
    bindsym p layout toggle split; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

mode "mode_resize" {
    bindsym $left resize shrink width 10 px or 10 ppt
    bindsym $down resize grow height 10 px or 10 ppt
    bindsym $up resize shrink height 10 px or 10 ppt
    bindsym $right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

### Binds
bindsym $mod+semicolon mode "$mode_launch"
bindsym $mod+l mode "$mode_layout"
bindsym $mod+r mode "mode_resize"
bindsym $mod+Shift+c restart
bindsym $mod+Shift+q exit
bindsym $mod+x kill

# Scratchpads
bindsym $mod+k exec scratchpad scratchtop
bindsym $mod+j exec scratchpad scratchbottom

# Window control
bindsym $mod+Control+$left focus left
bindsym $mod+Control+$right focus right
bindsym $mod+Control+$up focus up
bindsym $mod+Control+$down focus down
bindsym $mod+Return fullscreen
bindsym $mod+space floating toggle
bindsym $mod+Tab workspace back_and_forth

# Workspace control
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
bindsym $mod+Shift+h workspace prev
bindsym $mod+Shift+l workspace next

### Colors

### Status Bar(s)
bar {
    id bar-1
    status_command i3status
    mode hide
    hidden_state hide
    modifier Mod4
    position top
    colors {
        statusline #383838
        background #080808
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty

set $ws1 1:  
set $ws2 2:  
set $ws3 3:  
set $ws4 4:  
set $ws5 5:  
set $ws6 6:  
set $ws10 10:  

### Exec
exec xset r rate 200 50 &
exec $term --title=vim -e /usr/bin/nvim -S $XDG_CACHE_HOME/nvim/session.vim; mode "default" &
exec compton &
exec sh "$XDG_CACHE_HOME/fehbg" &
exec unclutter -grab &

### Settings
floating_modifier $mod
default_orientation auto
workspace_auto_back_and_forth yes
workspace_layout default
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders smart
font pango:Iosevka Custom, Font Awesome 5 Free 11

### Window handling
for_window [class="ascii3d"] floating enable
for_window [class="xfreerdp"] floating disable
for_window [class="Alacritty" title="^scratch"] floating enable

## Window Assignment
assign [class="Alacritty" title="dispatch"] $ws1
assign [class="qutebrowser"] $ws2
assign [class="Alacritty" title="^vim$"] $ws3
assign [class="Alacritty" title="^irc$"] $ws4
#assign [class="qutebrowser" title="^discord$"] $ws4
assign [class="Steam"] $ws5
assign [class="xfreerdp"] $ws6
assign [class="uhk-agent"] $ws10

### Modes
set $mode_launch [b]rowser, [d]iscord, [i]rc, [s]team, [t]erm, [v]im, [u]hk, [z]athura
mode "$mode_launch" {
    bindsym b exec "$BROWSER"; mode "default"
    bindsym d exec /usr/bin/qutebrowser --target window https://discordapp.com/channels/@me; mode "default"
    bindsym i exec $term --title=irc -e fish -c "set TERM xterm && weechat-curses"; mode "default"
    bindsym s exec steam; mode "default"
    bindsym t exec $term --config-file $XDG_CONFIG_HOME/alacritty/alacritty-padding.yml --title=term -e tmux -f $XDG_CONFIG_HOME/tmux/tmux.conf new-session; mode "default"
    bindsym v exec $term --title=vim -e /usr/bin/nvim -S $XDG_CACHE_HOME/nvim/session.vim; mode "default"
    bindsym u exec uhk-agent; mode "default"
    bindsym z exec zathura; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

set $mode_layout [s]tacking, [t]abbed, s[p]lit (toggle)
mode "$mode_layout" {
    bindsym s layout stacking; mode "default"
    bindsym t layout tabbed; mode "default"
    bindsym p layout toggle split; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

set $mode_search [b]in, [d]iff, [f]ile, [k]ill, [m]an, [p]ass, [s]sh
mode "$mode_search" {
    bindsym b exec scratchpad scratchsearch fuzzysearch bin; mode "default"
    bindsym d exec scratchpad scratchsearch fuzzysearch diff; mode "default"
    bindsym f exec scratchpad scratchsearch fuzzysearch file; mode "default"
    bindsym k exec scratchpad scratchsearch fuzzysearch kill; mode "default"
    bindsym m exec scratchpad scratchsearch fuzzysearch man; mode "default"
    bindsym p exec scratchpad scratchsearch fuzzysearch pwd; mode "default"
    bindsym s exec scratchpad scratchsearch fuzzysearch ssh; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "mode_resize" {
    bindsym $left resize shrink width 10 px or 10 ppt
    bindsym $down resize grow height 10 px or 10 ppt
    bindsym $up resize shrink height 10 px or 10 ppt
    bindsym $right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

### Binds
bindsym $mod+semicolon mode "$mode_launch"
bindsym $mod+m mode "$mode_layout"
bindsym $mod+r mode "mode_resize"
bindsym $mod+slash mode "$mode_search"
bindsym $mod+Shift+c restart
bindsym $mod+Shift+q exit
bindsym $mod+x kill
bindsym $mod+Escape exec i3lock-fancy -pf M+-1m-reular

### Custom workarounds
#bindsym --release Mod1+y exec --no-startup-id xdotool key --clearmodifiers ctrl+shift+space
bindsym --release Mod1+p exec --no-startup-id xdotool key --clearmodifiers shift+Insert

### Device control
bindsym XF86AudioLowerVolume exec amixer -q set Master 5-
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5+
bindsym XF86AudioMute exec amixer -q set Master toggle

# Scratchpads
bindsym $mod+k exec scratchpad scratchtop
bindsym $mod+j exec scratchpad scratchbottom
#bindsym $mod+slash exec scratchpad scratchsearch fuzzysearch

# Window control
bindsym $mod+Control+$left focus left
bindsym $mod+Control+$right focus right
bindsym $mod+Control+$up focus up
bindsym $mod+Control+$down focus down
bindsym $mod+Return fullscreen
bindsym $mod+space floating toggle
bindsym $mod+Tab exec $HOME/local/bin/flexible_focus.sh

# Workspace control
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace $ws10
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace $ws10
bindsym $mod+Shift+h workspace prev
bindsym $mod+Shift+l workspace next
bindsym $mod+h workspace prev
bindsym $mod+l workspace next
bindsym $mod+period [urgent=latest] focus

### Colors
client.focused      #FFFFFF #000000 #000000 #000000 #FFFFFF
client.unfocused    #888888 #000000 #000000 #000000 #888888
client.urgent       #FF0000 #000000 #000000 #000000 #FF0000

### Status Bar(s)
bar {
    id bar-1
    font pango:Iosevka Custom, Font Awesome 5 Free 11
    status_command i3status --config ~/local/config/i3/status.conf
    strip_workspace_numbers yes
    mode dock
    separator_symbol "   "
    hidden_state hide
    modifier Mod4
    position top
    colors {
        statusline #888888
        background #000000

        focused_workspace  #888888 #888888 #000000
        active_workspace   #000000 #000000 #FFFFFF99
        inactive_workspace #000000 #000000 #888888
        urgent_workspace   #000000 #000000 #FF0000
    }
}

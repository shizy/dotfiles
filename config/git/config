[user]
	email = shizukesa4@gmail.com
	name = Robert Winterstein

[github]
    user = shizy

[push]
    default = simple

[core]
    editor = /usr/bin/nvim
    autocrlf = input
    safecrlf = true

[format]
    pretty = "format:%an  |  %h  %ar  |  %s%d"

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[color "status"]
    added = 202
    changed = 201

[color "branch"]
    current = 201
    local = 202

[color "diff"]
    old = 205
    new = 202

[status]
    submodulesummary = 1

[difftool]
    prompt = false

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[alias]
    comp = difftool
    hist = log --graph --all
    undo = reset --hard
    off = clean -fd
    pop = stash pop
    sub = submodule
    rem = remote
    each = submodule foreach
    up = submodule foreach 'git pull'
    down = submodule foreach 'git clean -dff && git checkout -- .'
    cl = clone
    ch = checkout
    br = branch
    st = status
    co = commit -m
    ca = commit --amend

[url "ssh://git@github.com/"]
    pushInsteadOf = https://github.com/
    pushInsteadOf = http://github.com/
    pushInsteadOf = git://github.com/

[url "ssh://aur@aur.archlinux.org/"]
	pushInsteadOf = https://aur.archlinux.org/
	pushInsteadOf = http://aur.archlinux.org/
	pushInsteadOf = git://aur.archlinux.org/

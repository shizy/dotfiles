[push]
    default = simple

[core]
    editor = /usr/bin/nvim
    autocrlf = input
    safecrlf = true

[format]
    pretty = "format:%an  |  %h  %ar  |  %s%d"

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[status]
    submodulesummary = 1

[difftool]
    prompt = false

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[alias]
    hist = log --graph --all
    pop = stash pop
    sub = submodule
    rem = remote
    each = submodule foreach
    ch = checkout
    br = branch
    st = status
    co = commit


#!/bin/bash

mkdir -p $HOME/.local/wallpaper/

wget -O /tmp/himawari_temp.gif http://www.ssec.wisc.edu/data/geo/himawari/latest_himawari08_rgb_wp.gif
[ $? -eq 0 ] &&
    mogrify -crop 1750x970+0+15 -format JPG /tmp/himawari_temp.gif
    mv -f /tmp/himawari_temp.JPG $HOME/.local/wallpaper/himawari_current.jpg
    feh --bg-fill --no-fehbg $HOME/.local/wallpaper/himawari_current.jpg
    echo -n "feh --bg-fill --no-fehbg '$HOME/.local/wallpaper/himawari_current.jpg'" > $XDG_CACHE_HOME/fehbg

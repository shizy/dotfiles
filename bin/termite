#!/bin/bash

tempdir=$XDG_RUNTIME_DIR/termite

if [ ! -d "$tempdir" ]; then
    mkdir -p "$tempdir" 2>/dev/null
fi

source $XDG_CONFIG_HOME/zsh/.zprofile
cp -f "$XDG_CONFIG_HOME/termite/base_config" "$tempdir/config"

echo "color200 = $COLOR_URGENT" >> "$tempdir/config"
echo "color201 = $COLOR_NORMAL" >> "$tempdir/config"
echo "color202 = $COLOR_NOTIFY" >> "$tempdir/config"

if [ ! -L "$XDG_CONFIG_HOME/termite/config" ]; then
    ln -s "$XDG_RUNTIME_DIR/termite/config" "$XDG_CONFIG_HOME/termite/config"
fi

/usr/bin/termite "$@" &

{Super_L,@Super_L}
    scratchpad scratchjeeves {show,hide} jeeves

# Navigation

super + ctrl + {h,j,k,l}
	bspc window -f {left,down,up,right}; \
    bspc desktop -c;

super + {h,l}
	bspc desktop -f {prev,next}.occupied

super + {comma,period}
	bspc desktop -f {prev,next}.urgent; \
    bspc window -f {prev,next}.urgent;

super + shift + {1-9,0}
	bspc window -d ^{1-9,10}

super + {1-9,0}
    bspc desktop -f ^{1-9,10}

super + Tab
	(bspc monitor -f last || bspc monitor -f next) ||  bspc desktop -f last

# Window Control

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + ctrl + shift + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + shift + {h,j,k,l}
	bspc window -s {left,down,up,right}

super + Right
    bspc window -e right +10 || bspc window -e left +10

super + Left
    bspc window -e left -10 || bspc window -e right -10

super + Up
    bspc window -e up -10 || bspc window -e down -10

super + Down
    bspc window -e down +10 || bspc window -e up +10

super + space
    bspc window -t floating;

super + Return
    bspc window -t fullscreen;

super + shift + x
    bspc window -k

# Scratchpads & Search

{ctrl,super,ctrl + super} + grave
    scratchpad scratch{top,bottom,left}

super + slash
    scratchpad scratchsearch fuzzysearch

# Peripherals

super + {F4, F8}
    {extend_display,lockscreen}

super + {F9, F10}
    {xbacklight -dec 10 -steps 1,xbacklight -inc 10 -steps 1}

{_, super} + XF86Audio{LowerVolume,RaiseVolume,Mute}
    amixer -q set Master {5-,5-,5+,5+,toggle,toggle}

super + insert
    scrot $HOME/downloads/%Y-%m-%T-screenshot.png

# Shortcuts
super + i
    termite --title=irc -e "weechat-curses -d $XDG_CONFIG_HOME/weechat"

super + v
    nvim

super + m
    termite --title=mutt -e "mutt -F $XDG_CONFIG_HOME/mutt/muttrc"

#super + w
#    wallpaper

super + t
	termite --title=term

super + f
    qutebrowser
#firefox --profile $XDG_CACHE_HOME/mozilla/firefox -P shizy

super + Escape
    i3lock-wrapper

super + semicolon
    dmenu_run -nb '#F1FAEE' -nf '#383838' -sf '#E63946' -sb '#383838' -b -fn 'M+ 1n-9'

# Utility

ctrl + shift + r
	pkill -USR1 -x sxhkd

super + shift + q
	bspc quit

color body              color208        default "(finger|ftp|http|https|news|telnet)://[^ >]*"
color body              color208        default "<URL:[^ ]*>"
color body              color208        default "www\\.[-.a-z0-9]+\\.[a-z][a-z][a-z]?([-_./~a-z0-9]+)?"
color body              color208        default "mailto: *[^ ]+\(\\i?subject=[^ ]+\)?"
color body              color208        default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"


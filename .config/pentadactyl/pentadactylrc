"1.2pre

set runtimepath=$XDG_CONFIG_HOME/pentadactyl
set hintkeys='sadfklewcmpgh'
set hintinputs=label
set guioptions=Cs
set showtabline='never'
set defsearch='duckduckgo'
set suggestengines='duckduckgo'
set complete='S'
js editor.defaultRegister="+"

set! browser.startup.homepage='https://duckduckgo.com'
set! browser.search.defaultenginename='DuckDuckGo'
set! services.sync.prefs.signon.rememberSignons=false
set! signon.rememberSignons=false
set! network.http.pipelining=true
set! network.http.proxy.pipelining=true
set! privacy.trackingprotection.enabled=true

loadplugins '\.(js|penta)$'
group user

map             <Space>             <Leader>

nmap            <A-j>               <C-d>
nmap            <A-k>               <C-u>
nmap            <A-l>               :tabnext<CR>
nmap            <A-h>               :tabprevious<CR>
nmap            <A-Space>           :b<Space>
nmap            <A-b>               :b<Space>#<CR>
nmap            <A-o>               :tab<Space>open<Space>
nmap            <A-u>               :forward<CR>
nmap            <A-n>               <find-previous>
nmap            <A-f>               <S-f>
nmap            y                   <yank-selection>
nmap            <C-c>               <yank-selection>
nmap            <A-y>               <yank-location>
nmap            <C-p>               <S-Insert>
nmap            u                   :back<CR>
nmap            r                   :reload<CR>
nmap            d                   <nop>
nmap            <A-x>               :quit<CR>
nmap            <A-S-x>             :bdelete<Space>
nmap            <A-z>               :wqall<CR>
nmap            <A-.>               ]]
nmap            <A-,>               [[
nmap            <Leader>b           :bmarks<CR>;
nmap            <Leader>d           :downloads<CR>;
nmap            <Leader>h           :history<CR>;
nmap            <Leader>w           <nop>
nmap            <A-Tab>             :buffer #<CR>
nmap            <A-w>               :saveas<space>downloads/

cmap            jj                  <Esc><Esc>
cmap            <A-Space>           <Esc><Esc>
cmap            jk                  <CR>
cmap            <A-j>               <Tab>
cmap            <A-k>               <S-Tab>
cmap            <A-h>               <Left>
cmap            <A-l>               <Right>

source $XDG_CONFIG_HOME/pentadactyl/chrome.css

hi Normal color: #383838; background-color: #F1FAEE; font-family: "M+ 1m"; font-size: 10pt;
hi NonText color: #383838;
hi StatusLine font-size: 9pt;
hi StatusNormal color: #383838; background-color: #F1FAEE; font-weight: bold
hi StatusLineNormal color: #383838; background-color: #F1FAEE; font-weight: bold
hi StatusLineSecure color: #457B9D; background-color: #F1FAEE; font-weight: bold;
hi StatusLineExtended color: #457B9D; background-color: #F1FAEE; font-weight: bold;
hi StatusLineBroken color: #E63946; background-color: #F1FAEE; font-weight: bold
hi CmdLine font-size: 9pt;
hi CmdNormal color: #383838; background-color: #F1FAEE;
hi Hint font-size: 9pt; font-weight: bold; color: #E63946; border: 1px solid #383838; background-color: #F1FAEE; padding: 3px;
hi Hint[active] background-color: #F1FAEE;
hi HintActive background-color: none;
hi HintElem background-color: none;
hi Title color: #457B9D; font-weight: bold;
hi CompTitle color: #457B9D; font-weight: bold;
hi CompTitleSep height: 1px; background-color: #457B9D;
hi CompItem[selected] background: #383838; color: #E63946; font-weight: bold;

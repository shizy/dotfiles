source "gpg2 -dq $HOME/.staybehinds/gmailpwd.gpg |"

# MAILBOX(ES)
set folder           = imaps://imap.gmail.com/
set imap_user        = shizukesa4@gmail.com
set from             = shizukesa4@gmail.com
set use_from         = yes
set imap_pass        = $my_gmailpwd
set spoolfile        = +INBOX
mailboxes            = +INBOX =[Gmail]/Drafts =[Gmail]/'Sent Mail' =[Gmail]/Spam =[Gmail]/Trash
set header_cache     = '~/.cache/mutt'
set message_cachedir = '~/.cache/mutt'
set mail_check       = 120
set timeout          = 300
set imap_keepalive   = 300
set sort             = 'threads'
set sort_aux         = 'last-date-received'
set send_charset     = 'utf-8'
set index_format     = '%Z  %{%b %d}  %-30.30L  -  %s'
set status_format    = '  %f  New: %n  Flagged: %F'
set copy             = no
set pager_stop

# SMTP
set smtp_url       = "smtp://shizukesa4@smtp.gmail.com:587/"
set smtp_pass      = $my_gmailpwd
set move           = no
set imap_keepalive = 900

# MACROS
macro index     -   <change-folder>?<enter>

# BINDINGS
bind generic    Z   exit

bind index      q   noop
bind index      H   noop
bind index      J   half-down
bind index      K   half-up
bind index      X   delete-message
bind index      I   reply
bind index      A   group-reply
bind index      O   mail
bind index      V   flag-message
bind index      r   sync-mailbox

bind pager      u   exit
bind pager      J   half-down
bind pager      K   half-up
bind pager      j   next-line
bind pager      k   previous-line
bind pager      X   delete-message
bind pager      I   reply
bind pager      A   group-reply
bind pager      O   mail
bind pager      V   flag-message
bind pager      r   sync-mailbox
bind pager      <   previous-entry
bind pager      >   next-entry

bind attach     u   exit


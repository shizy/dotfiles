general {
        output_format = "i3bar"
        colors = true
        color_good = "#75DAA9"
        color_degraded = "#EFBD8B"
        color_bad = "#FFA7DA"
        color_separator = "#000000"
        interval = 2
}

order += "wireless wlo1"
order += "ethernet enp0s25"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless wlo1 {
        format_up = " ( %essid )   %quality "
        format_down = ""
}

volume master {
        format = "  %volume "
        format_muted = "  "
}

ethernet enp0s25 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "  %speed"
        format_down = ""
}

battery 0 {
        format = "  %percentage "
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 15
        threshold_type = percentage
        integer_battery_capacity = true
        last_full_capacity = false
}

tztime local {
        format =" %b %d  %l:%M %P"
}

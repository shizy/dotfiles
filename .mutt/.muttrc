# Paths
set folder           = ~/.mail
set header_cache     = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set mailcap_path     = ~/.mutt/.mailcap
set tmpdir           = ~/.mutt/temp

# Account
set spoolfile  = "=gmail/INBOX"
set postponed  = "=gmail/[Gmail].Drafts"
set timeout    = 10
set mail_check = 5
mailboxes =gmail/INBOX
mailboxes =gmail/[Gmail].Drafts
mailboxes =gmail/[Gmail].Trash
mailboxes =gmail/[Gmail].Sent\ Mail
mailboxes =gmail/[Gmail].Starred

# SMTP
set realname       = "Robert & Carly Winterstein"
set from           = shizukesa4@gmail.com
set use_from       = yes
set envelope_from  = yes
set smtp_url       = "smtp://shizukesa4@smtp.gmail.com:587/"
set move           = no

# Pager
set pager_format      = ''
set pager_context     = 10
set pager_index_lines = 20
set pager_stop

# Index
unset mark_old
unset markers
unset to_chars
set sort         = 'threads'
set sort_aux     = 'last-date-received'
set index_format = '%Z  %{%b %d}  %-30.30L  -  %s'
set menu_scroll

# Side-bar
set sidebar_format    = '  %B %> %N  '
set sidebar_visible   = yes
set sidebar_width     = 32
set sidebar_sort      = yes
set sidebar_delim     = ' â”‚'
set sidebar_shortpath = yes

# General
auto_view text/html
alternative_order text/plain text/enriched text/html
set status_format = '  %P %> New: %n  Flagged: %F  Total: %m  '
set beep          = yes
set beep_new      = yes
set sleep_time    = 0
set confirmappend = no
set delete        = yes
unset tilde
set text_flowed
set editor        = 'nvim'
set meta_key      = yes

# Headers
ignore *
unignore from: to: cc: date: subject:
unhdr_order *
hdr_order from: to: cc: date: subject:

# Macros
macro index,pager       <space>u        '<sync-mailbox><shell-escape>offlineimap -o<enter>'
macro index,pager       \el             <sidebar-next><sidebar-open><display-message>
macro index,pager       \eh             <sidebar-prev><sidebar-open><display-message>
macro index,pager       \em             <save-message>?<toggle-mailboxes>
macro index,pager       \ex             '<save-message><kill-line>=gmail/trash<enter><sync-mailbox>'
macro index,pager       k               <previous-entry><display-message>
macro index,pager       j               <next-entry><display-message>
macro index,pager       \ez             <quit>
macro index,pager       \ec             ":set smtp_pass=`pass web/google`;<enter><mail>"

macro pager             !               <flag-message><display-message>

# Bindings
bind generic            x               noop
bind generic            q               noop
bind generic            j               next-entry
bind generic            k               previous-entry
bind generic            u               exit

bind index              u               noop
bind index              !               flag-message

bind index,pager        s               noop
bind index,pager        d               noop
bind index,pager        q               noop
bind index,pager        \ea             group-reply
bind index,pager        \ec             mail
bind index,pager        \ef             forward-message
bind index,pager        \er             reply
bind index,pager        r               sync-mailbox
bind index,pager        \ej             half-down
bind index,pager        \ek             half-up

bind pager              i               noop
bind pager              gg              top
bind pager              G               bottom
bind pager              u               exit

bind attach             u               exit
bind browser            u               exit
bind compose            u               exit

# COLORS
color sidebar_new       color208        default

color error             color222        color232
color markers           color161        color232
color tilde             color108        default
color status            color81         color232

color indicator         color252        color236
color tree              color81         default
color index             color252        default ~N #new
color index             color244        default ~O #old
color index             color154        default ~Q #replied
color index             color161        default ~F #flagged
color index             color222        default ~D #deleted

color hdrdefault        color141        default
color header            color154        default "^Subject"

color body              color208        default "(finger|ftp|http|https|news|telnet)://[^ >]*"
color body              color208        default "<URL:[^ ]*>"
color body              color208        default "www\\.[-.a-z0-9]+\\.[a-z][a-z][a-z]?([-_./~a-z0-9]+)?"
color body              color208        default "mailto: *[^ ]+\(\\i?subject=[^ ]+\)?"
color body              color208        default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

color attachment        color161        default
color signature         color252        default

color quoted            color238        default
color quoted1           color237        default
color quoted2           color236        default
color quoted3           color235        default
color quoted4           color234        default
color quoted5           color233        default
color quoted6           color232        default
color quoted7           color231        default
color quoted8           color230        default
color quoted9           color229        default
